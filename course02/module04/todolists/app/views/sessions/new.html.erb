<h1>Login</h1>

<%= form_for(:user, url: sessions_path) do |f| %>
  <p id="alert"><%= alert %></p>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>
